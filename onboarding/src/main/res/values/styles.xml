<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RoundedButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="OnBoardingStyle" parent="App.Theme.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">@color/buffer_gray_heading</item>
        <item name="android:textColorSecondary">@color/buffer_gray_heading</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

</resources>